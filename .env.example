# JaePa 환경 변수 설정 예시
# 이 파일을 복사하여 .env, .env.development, .env.test, .env.production 파일을 생성하세요.

# 기본 설정
ENVIRONMENT=development  # development, testing, production
DEBUG=true

# 애플리케이션 설정
APP_NAME=JaePa
APP_DESCRIPTION=해외 금융 뉴스 크롤링과 감성 분석을 통한 투자 의사결정 도구
APP_VERSION=0.1.0

# 로깅 설정
LOGGING__LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING__FILE_ENABLED=true
LOGGING__FILE_PATH=logs/jaepa.log

# 데이터베이스 설정
DB__ENGINE=mongodb  # mongodb 또는 sqlite

# MongoDB 설정
DB__MONGO_URI=mongodb://localhost:27017/
DB__MONGO_DB_NAME=jaepa
DB__MONGO_CONNECT_TIMEOUT=5000
DB__MONGO_MAX_POOL_SIZE=10
DB__MONGO_MIN_POOL_SIZE=1

# SQLite 설정
DB__SQLITE_URL=sqlite:///./jaepa.db

# API 설정
API__HOST=0.0.0.0
API__PORT=8000
API__DEBUG=true
API__PREFIX=/api
API__VERSION=v1
API__CORS_ORIGINS=http://localhost:3000,http://localhost:80

# 크롤링 설정
CRAWLING__TIMEOUT=30
CRAWLING__RETRIES=3
CRAWLING__RETRY_DELAY=2
CRAWLING__REQUESTS_PER_MINUTE=10
CRAWLING__NEWS_UPDATE_INTERVAL=6h

# GDELT 설정
CRAWLING__GDELT_REQUEST_INTERVAL=1.0
CRAWLING__GDELT_MAX_RECORDS=250

# 감성 분석 설정
SENTIMENT__MODEL=finbert
SENTIMENT__MODEL_PATH=models/finbert
SENTIMENT__BATCH_SIZE=16
SENTIMENT__MAX_LENGTH=512
SENTIMENT__POSITIVE_THRESHOLD=0.6
SENTIMENT__NEGATIVE_THRESHOLD=0.6
SENTIMENT__MULTILINGUAL=false
SENTIMENT__LANGUAGES=en

# 주식 데이터 설정
STOCK__DEFAULT_PERIOD=1y
STOCK__DEFAULT_INTERVAL=1d
STOCK__CACHE_DIR=./.cache/stock_data
STOCK__CACHE_EXPIRY=86400

# API 키 설정
POLYGON_API_KEY=your_polygon_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
FINNHUB_API_KEY=your_finnhub_api_key

# 보안 설정
SECURITY__JWT_SECRET_KEY=change_this_secret_key
SECURITY__JWT_ALGORITHM=HS256
SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY__REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY__RATE_LIMIT_ENABLED=true
SECURITY__RATE_LIMIT_REQUESTS=100
SECURITY__RATE_LIMIT_PERIOD_SECONDS=60

# 프론트엔드 환경 변수
REACT_APP_API_URL=/api
