# JaePa 프로젝트 환경 변수 예시 파일
# 실제 사용 시 이 파일을 복사하여 .env 파일을 생성하고 값을 수정하세요.

# 프로젝트 기본 설정
PROJECT_NAME=JaePa
PROJECT_DESCRIPTION=해외 금융 뉴스 크롤링과 감성 분석을 통한 투자 의사결정 도구
VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development
CONFIG_FILE=config/config.json

# 데이터베이스 설정
MONGO_USERNAME=jaepa_user
MONGO_PASSWORD=change_this_password
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=jaepa

# API 설정
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_PREFIX=/api
API_VERSION=v1
CORS_ORIGINS=http://localhost:80,http://frontend
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# 크롤링 설정
CRAWLING_TIMEOUT=30
CRAWLING_RETRIES=3
CRAWLING_RETRY_DELAY=2
CRAWLING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
CRAWLING_REQUESTS_PER_MINUTE=10
CRAWLING_PAUSE_BETWEEN_REQUESTS=6

# 감성 분석 설정
SENTIMENT_MODEL=finbert
SENTIMENT_MODEL_PATH=models/finbert
SENTIMENT_BATCH_SIZE=16
SENTIMENT_POSITIVE_THRESHOLD=0.6
SENTIMENT_NEGATIVE_THRESHOLD=0.6
SENTIMENT_MULTILINGUAL=false
SENTIMENT_LANGUAGES=en

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/jaepa.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_ROTATION=1 day
LOG_RETENTION=30 days
LOG_MASK_SENSITIVE_DATA=true
LOG_SENSITIVE_FIELDS=password,secret,token,key,auth,credential

# 보안 설정
JWT_SECRET_KEY=change_this_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# 주식 데이터 설정
STOCK_DEFAULT_PERIOD=1y
STOCK_DEFAULT_INTERVAL=1d
STOCK_TECHNICAL_INDICATORS=sma,ema,rsi,macd,bollinger_bands
STOCK_MOVING_AVERAGES=20,50,200
POLYGON_API_KEY=your_polygon_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
FINNHUB_API_KEY=your_finnhub_api_key

# GDELT 설정
GDELT_API_BASE_URL=https://api.gdeltproject.org/api/v2/
GDELT_DOC_API_URL=doc/doc
GDELT_GKG_API_URL=gkg/gkg
GDELT_EVENTS_API_URL=events/events
GDELT_REQUEST_INTERVAL=1.0
GDELT_MAX_RECORDS=250
GDELT_COMPANY_MAPPING_FILE=data/company_mapping.json

# 프론트엔드 환경 변수
REACT_APP_API_URL=/api
